<h1>Listing invoices</h1>
 
<table>
    <tr>
        <th>Item</th>
        <th>Guest</th>
    </tr>
 
      <% @invoices.each do |invoice| %>
            <tr>
            <% item = Invoice.find(@invoice.item_id) %>
            <% guest = Guest.find(@invoice.guest_id) %>
            <td><%= item.name %>:<%= invoice.item_quantity %> x <%= item.price %> = <%= amount %></td>
            <td><%=guest.name%></td>
            <td><%= link_to 'Show', invoice_path(invoice) %></td>
            <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
            <td><%= link_to 'Delete', invoice_path(invoice), method: :delete,
        data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
</table>

<br><%= link_to 'New invoice', new_invoice_path %>
<br><%= link_to 'Back', welcome_index_path %>